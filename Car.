package Example;

public class Car {

    Car(){
        String model;
    }
    int startMove(int km){
        int durability=100;//вероятно вариации с пробегом можно было сделать через switch.врать тебе не хочу.показываю свой реальный уровень.
        //т к пришел за помощью а не пыль пустить в глаза.ну как бы вот так.
        if(km<1000){
            System.out.println("состояние двигателя отличное");
        }
        if(km>=1000&km<2000){
            System.out.println("состояние двигателя ухудшилось до "+(durability-=10));
        }
        if(km>=2000&km<3000){
            System.out.println("состояние двигателя ухудшилось до "+(durability-=20));
        }
        if(km>=3000&km<4000){
            System.out.println("состояние двигателя ухудшилось до "+(durability-=30));
        }
        if(km>=4000&km<5000){
            System.out.println("состояние двигателя ухудшилось до "+(durability-=40));
        }
        if(km>=5000&km<6000){
            System.out.println("состояние двигателя ухудшилось до "+(durability-=50));
        }
        if(km>=6000&km<7000){
            System.out.println("состояние двигателя ухудшилось до "+(durability-=60));
        }
        if(km>=7000&km<8000){
            System.out.println("состояние двигателя ухудшилось до "+(durability-=70));
        }
        if(km>=8000&km<9000){
            System.out.println("состояние двигателя ухудшилось до "+(durability-=80));
        }
        if(km>=9000&km<10000){
            System.out.println("состояние двигателя ухудшилось до "+(durability-=90));
        }
        if(km>=10000){
            System.out.println("двигатель вышел из строя. необходим ремонт");
        }
        return durability;
    }

    static class engine extends Car {
        //int durability;//обозначает износ двигателя

        void engine() {
        }
    }

    void showEngineInfo(int durability){
        System.out.println("состояние двигателя составляет "+durability);
    }
}
class RepairEngine extends Car{
    int repairEngine(Car car){
        System.out.println("ремонт произведен и теперь Durability восстановлен");
         //return;
    }
}
class Test1{
    public static void main(String[] args) {
        Car c=new Car();
        Car.engine e=new Car.engine();
e.startMove(10000);
e.showEngineInfo(40);//умом понимаю что наверное нужно чтобы метод шоуинфо принимал на вход
// данные от durability, но как это реализовать не могу придумать
    }
}
